@model List<Entidades.PeriodosModel>
@{
    ViewBag.Title = "Seleccionar Período";
    string cedulaSeleccionada = ViewBag.cedulaSeleccionada;
    string idConglomerado = ViewBag.idConglomerado;
}

<h2>Seleccionar Período</h2>

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensajeError"]
    </div>
}

@using (Html.BeginForm("EvaluarSubAlterno", "Evaluacion", FormMethod.Post))
{
    @Html.Hidden("cedulaSeleccionada", cedulaSeleccionada)
    @Html.Hidden("idConglomerado", idConglomerado)

<div class="form-group">
    <div class="col-md-6">
        <label for="idPeriodo">Seleccione un período:</label>
        <br />
        <br />
        <select class="form-control" id="idPeriodo" name="idPeriodo" required>
            <option value="">-- Seleccione --</option>
            @foreach (var periodo in Model)
            {
                <option value="@periodo.idPeriodo">@periodo.Nombre (@periodo.FechaInicio.ToString("dd/MM/yyyy") - @periodo.FechaFin.ToString("dd/MM/yyyy"))</option>
            }
        </select>
    </div>
  </div>
    <br />
    <div class="mt-3">
        @*Button Regresar*@
        <button type="button" class="btn btn-outline-secondary" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Regresar</button>
        @*Button Continuar*@
        <button type="submit" class="btn btn-primary">Continuar <i class="fa-solid fa-arrow-right"></i></button>
    </div>
    }
    <script defer src="~/sources/js/accionOcultarCerrarMensajes.js"></script>



