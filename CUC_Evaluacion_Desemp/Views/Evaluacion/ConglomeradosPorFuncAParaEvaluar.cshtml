@model List<Entidades.ConglomeradoModel>

@{
    ViewBag.Title = "Seleccionar Conglomerado Subalterno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Seleccione el conglomerado a Evaluar para este funcionario:</h2>

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensajeError"]
        </div>
    }

    <p>Por favor, seleccione de la siguiente lista el conglomerado al que desea evaluar.</p>

    @using (Html.BeginForm("SelecPeriodoPorFunParaEvaluar", "Evaluacion", FormMethod.Post))
    {
        <input type="hidden" name="cedulaSeleccionada" value="@ViewBag.cedulaSeleccionada" />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Seleccionar</th>
                    <th>Conglomerado</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var conglomerado in Model)
                    {
                        <tr>
                            <td>
                                <input type="radio" name="idConglomerado" value="@conglomerado.IdConglomerado" />
                            </td>
                            <td>@conglomerado.NombreConglomerado</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">
                            No se encontraron Conglomerados registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                Continuar
            </button>
        </div>
    }
</div>
