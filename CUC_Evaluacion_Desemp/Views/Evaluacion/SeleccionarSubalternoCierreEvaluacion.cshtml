@model List<Entidades.FuncionarioModel>

@{
    ViewBag.Title = "Seleccionar Subalterno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Seleccionar Subalterno a Evaluar</h2>

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensajeError"]
        </div>
    }

    <p>Por favor, seleccione de la siguiente lista el subalterno al que desea evaluar.</p>

    <div class="alert alert-info ">
        La lista contiene sus subalternos con estado "Activo" y con evaluaciones o seguimientos.
    </div>

    @using (Html.BeginForm("SeleccionarSubalternoCierreEvaluacion", "Evaluacion", FormMethod.Post))
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Seleccionar</th>
                    <th>Cédula</th>
                    <th>Nombre Completo</th>
                    <th>Dependencia</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var sub in Model)
                    {
                        <tr>
                            <td>
                                <input type="radio" name="cedulaSeleccionada" value="@sub.Cedula" />
                            </td>
                            <td>@sub.Cedula</td>
                            <td>@($"{sub.Nombre} {sub.Apellido1} {sub.Apellido2}")</td>
                            <td>@sub.Dependencia</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No se encontraron subalternos con evaluaciones o seguimientos.
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            @*Button Regresar*@
            <button type="button" class="btn btn-outline-secondary" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Regresar</button>
            @*Button Continuar*@
            <button type="submit" class="btn btn-primary">Continuar <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    }
</div>

<script defer src="~/sources/js/accionOcultarCerrarMensajes.js"></script>



