@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Evaluación del Desempeño CUC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/611d65fda4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/sources/css/styles.css" />
    <link rel="stylesheet" href="~/sources/css/alerta.css" />
    <script defer src="~/sources/js/scripts.js"></script>

</head>
<body>
    @{
        var claimsUser = User as ClaimsPrincipal;
        var idRol = claimsUser?.FindFirst("IdRol")?.Value;
        var nombreRol = claimsUser?.FindFirst(ClaimTypes.Role)?.Value;
    }

    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2>
                    <a href="@Url.Action("Index", "Home")" style="color: inherit; text-decoration: none;">
                        Evaluación CUC
                    </a>
                </h2>
            </div>
            <ul class="sidebar-menu">
                @if (nombreRol == "Administración" || nombreRol == "Jefatura")
                {
                    <li><a href="@Url.Action("Index", "Mantenimientos")">Mantenimientos</a></li>
                }
                <li><a href="@Url.Action("Index", "Evaluacion")">Evaluación <i class="fa-solid fa-arrow-down"></i></a></li>
                <li><a href="@Url.Action("Index", "Reportes")">Reportes <i class="fa-solid fa-arrow-down"></i></a></li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="main-content">
            <header class="topbar">
                <h1>Sistema de Evaluación del Desempeño CUC</h1>
                <div class="user-menu">
                    <button id="userIcon" class="user-icon" type="button">👤</button>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("CerrarSesion", "Home")">Cerrar sesión</a></li>
                    </ul>
                </div>
            </header>

            <main>
                @RenderBody()
            </main>

            <footer>
                <img src="~/sources/img/LogoCUC.png" alt="CUC Logo" />
                <p>&copy; 2025 Evaluación CUC - Todos los derechos reservados</p>
            </footer>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
<script defer src="~/sources/js/scripts.js"></script></body>
</html>
