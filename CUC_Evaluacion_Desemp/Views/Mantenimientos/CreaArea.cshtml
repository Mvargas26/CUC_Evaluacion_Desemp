@model Entidades.AreasModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Nueva Área";
}

<div class="container mt-4">
    <h2 class="mb-4">Crear Nueva Área</h2>

    @* Mostrar mensajes *@
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">@TempData["MensajeError"]</div>
    }
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">@TempData["MensajeExito"]</div>
    }

    @using (Html.BeginForm("CreaArea", "Mantenimientos", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <label>Nombre del Área</label>
            @Html.TextBoxFor(m => m.NombreArea, new { @class = "form-control", placeholder = "Ingrese el nombre del área" })
            @Html.ValidationMessageFor(m => m.NombreArea, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            <label>Descripción</label>
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", placeholder = "Ingrese la descripción del área" })
            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary mt-2">
            <i class="fas fa-save"></i> Guardar
        </button>
        <a href="@Url.Action("ManteniArea", "Mantenimientos")" class="btn btn-secondary mt-2">Cancelar</a>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
