@model Entidades.AreasModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Modificar Área";
}

<div class="container mt-4">
    <h2 class="mb-4">Modificar Área</h2>

    @* Mostrar mensajes *@
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">@TempData["MensajeError"]</div>
    }
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">@TempData["MensajeExito"]</div>
    }

    @using (Html.BeginForm("EditaArea", "Mantenimientos", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.idArea)

        <div class="mb-3">
            <label for="NombreArea" class="form-label">Nombre del Área modificar</label>
            @Html.TextBoxFor(m => m.NombreArea, new { @class = "form-control", placeholder = "Ingrese el nombre del Área" })
            @Html.ValidationMessageFor(m => m.NombreArea, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="Descripcion" class="form-label">Descripción a modificar</label>
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Guardar Cambios
        </button>
        <a href="@Url.Action("ManteniArea", "Mantenimientos")" class="btn btn-secondary">Cancelar</a>
    }
</div>
