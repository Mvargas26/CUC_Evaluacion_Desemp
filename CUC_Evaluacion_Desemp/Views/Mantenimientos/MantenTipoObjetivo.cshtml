@model IEnumerable<Entidades.TiposObjetivosModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mantenimiento Tipos de Objetivos";
}

<div class="container mt-4">
    <h2 class="mb-4">Mantenimiento Tipos de Objetivos</h2>

    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">
            @TempData["MensajeExito"]
        </div>
    }

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensajeError"]
        </div>
    }

    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCrearTipoObjetivo">
            <i class="fas fa-plus"></i> Crear
        </button>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tipo de Objetivo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tipo in Model)
                {
                    <tr>
                        <td>@tipo.IdTipoObjetivo</td>
                        <td>@tipo.Tipo</td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalEditarTipoObjetivo-@tipo.IdTipoObjetivo">
                                <i class="fas fa-edit"></i>
                            </button>

                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminarTipoObjetivo-@tipo.IdTipoObjetivo">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Crear -->
<div class="modal fade" id="modalCrearTipoObjetivo" tabindex="-1" aria-labelledby="modalCrearTipoObjetivoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCrearTipoObjetivoLabel">Nuevo Tipo de Objetivo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form action="@Url.Action("CrearTipoObjetivo", "Mantenimientos")" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Tipo" class="form-label">Nombre del Tipo</label>
                        <input type="text" class="form-control" id="Tipo" name="Tipo" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar -->
@foreach (var tipo in Model)
{
    <div class="modal fade" id="modalEditarTipoObjetivo-@tipo.IdTipoObjetivo" tabindex="-1" aria-labelledby="modalEditarTipoObjetivoLabel-@tipo.IdTipoObjetivo" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEditarTipoObjetivoLabel-@tipo.IdTipoObjetivo">Editar Tipo de Objetivo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <form action="@Url.Action("EditarTipoObjetivo", "Mantenimientos")" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="IdTipoObjetivo" value="@tipo.IdTipoObjetivo" />
                        <div class="mb-3">
                            <label class="form-label">Nombre del Tipo</label>
                            <input type="text" class="form-control" name="Tipo" value="@tipo.Tipo" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Modal Eliminar -->
@foreach (var tipo in Model)
{
    <div class="modal fade" id="modalEliminarTipoObjetivo-@tipo.IdTipoObjetivo" tabindex="-1" aria-labelledby="modalEliminarTipoObjetivoLabel-@tipo.IdTipoObjetivo" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEliminarTipoObjetivoLabel-@tipo.IdTipoObjetivo">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Desea eliminar el tipo de objetivo <strong>@tipo.Tipo</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <form action="@Url.Action("EliminarTipoObjetivo", "Mantenimientos")" method="post">
                        <input type="hidden" name="id" value="@tipo.IdTipoObjetivo" />
                        <button type="submit" class="btn btn-danger">Sí</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<script defer src="~/sources/js/accionOcultarCerrarMensajes.js"></script>

