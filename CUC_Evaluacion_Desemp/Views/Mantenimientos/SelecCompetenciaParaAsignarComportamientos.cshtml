@model List<Entidades.CompetenciasModel>

@{
    ViewBag.Title = "Seleccionar Competencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Seleccione la competencia que le va asignar comportamientos:</h2>

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensajeError"]
        </div>
    }

    <p>Por favor, seleccione de la siguiente lista.</p>

    @using (Html.BeginForm("AsignarComportamientosYNiveles", "Mantenimientos", FormMethod.Post))
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Seleccionar</th>
                    <th>ID</th>
                    <th>Competencia</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var compe in Model)
                    {
                        <tr>
                            <td>
                                <input type="radio" name="idCompetenciaSelec" value="@compe.IdCompetencia" />
                            </td>
                            <td>@compe.IdCompetencia</td>
                            <td>@compe.Competencia</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No se encontraron competencias.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                Continuar
            </button>
        </div>
    }
</div>

<script defer src="~/sources/js/accionOcultarCerrarMensajes.js"></script>


