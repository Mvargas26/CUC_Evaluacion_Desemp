@using Entidades

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gestión de Niveles NivelComportamientos";
}

<div class="container mt-4">
    <h2 class="mb-4">Mantenimiento Niveles Comportamientos</h2>


    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">
            @TempData["MensajeExito"]
        </div>
    }

    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensajeError"]
        </div>
    }

    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCrearNivelComportamiento">
            <i class="fas fa-plus"></i> Crear
        </button>
    </div>


    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nivel</th>
                    <th>Valor</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var NivelesNivelComportamientos in Model)
                {
                    <tr>
                        <td>@NivelesNivelComportamientos.idNivel</td>
                        <td>@NivelesNivelComportamientos.nombre</td>
                        <td>@NivelesNivelComportamientos.valor</td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalEditarNivelComportamiento-@NivelesNivelComportamientos.idNivel">
                                <i class="fas fa-edit"></i>
                            </button>

                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminarNivelComportamiento-@NivelesNivelComportamientos.idNivel">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@*------------------------------------------------------------------------------ Modal Crear ---------------------------------------------------------------------*@
<div class="modal fade" id="modalCrearNivelComportamiento" tabindex="-1" aria-labelledby="modalCrearNivelComportamientoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCrearNivelComportamientoLabel">Nuevo Nivel Comportamientos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form action="@Url.Action("CreaNivelComportamiento", "Mantenimientos")" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nuevoNivelComportamientoNombre" class="form-label">Nombre del Nivel Comportamiento</label>
                        <input type="text" class="form-control" id="nombreNivelComport" name="nombre" required />
                    </div>
                    <div class="mb-3">
                        <label for="valorNivelComport" class="form-label">Valor del Nivel Comportamiento</label>
                        <input type="number" class="form-control" id="valorNivelComport" name="valor" required />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Crear Nivel Comportamiento</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*------------------------------------------------------------------------------ Modal editar ---------------------------------------------------------------------*@
@foreach (var NivelComportamiento in Model)
{
    <div class="modal fade" id="modalEditarNivelComportamiento-@NivelComportamiento.idNivel" tabindex="-1" aria-labelledby="modalEditarNivelComportamientoLabel-@NivelComportamiento.idNivel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEditarNivelComportamientoLabel-@NivelComportamiento.idNivel">Editar Nivel Comportamiento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <form action="@Url.Action("EditarNivelComportamiento", "Mantenimientos")" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="idNivel" value="@NivelComportamiento.idNivel" />

                        <div class="mb-3">
                            <label class="form-label">Nombre del Nivel Comportamiento</label>
                            <input type="text" class="form-control" name="nombre" value="@NivelComportamiento.nombre" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Valor del Nivel Comportamiento</label>
                            <input type="number" class="form-control" name="valor" value="@NivelComportamiento.valor" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@*------------------------------------------------------------------------------ Modal eliminar ---------------------------------------------------------------------*@

@foreach (var NivelComportamientos in Model)
{
    <div class="modal fade" id="modalEliminarNivelComportamiento-@NivelComportamientos.idNivel" tabindex="-1" aria-labelledby="modalEliminarNivelComportamientoLabel-@NivelComportamientos.idNivel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEliminarNivelComportamientoLabel-@NivelComportamientos.idNivel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Realmente desea eliminar el Nivel Comportamiento <strong>@NivelComportamientos.nombre</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <form action="@Url.Action("EliminarNivelComportamiento", "Mantenimientos")" method="post">
                        <input type="hidden" name="id" value="@NivelComportamientos.idNivel" />
                        <button type="submit" class="btn btn-danger">Sí</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<script defer src="~/sources/js/accionOcultarCerrarMensajes.js"></script>

