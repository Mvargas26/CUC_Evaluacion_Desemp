@{
    ViewBag.Title = "Reportes PDF del Funcionario";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cedula = ViewBag.Cedula as string;
    var reportes = ViewBag.Reportes as List<Entidades.ReportePdfViewModel>;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h3>Reportes generados para @cedula</h3>
            <p class="text-muted mb-0">Planificación / Evaluación / Seguimiento / Cierre</p>
        </div>
    </div>

    @if (reportes == null || !reportes.Any())
    {
        <div class="alert alert-warning">
            No hay reportes PDF almacenados para este funcionario.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <strong>Archivos PDF disponibles</strong>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Archivo</th>
                                <th>Fecha creación</th>
                                <th class="text-end">Descargar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in reportes)
                            {
                                <tr>
                                    <td>@r.NombreArchivo</td>
                                    <td>@r.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <a class="btn btn-primary btn-sm"
                                           href="@r.RutaRelativa"
                                           target="_blank"
                                           download>
                                            Descargar <i class="fa-solid fa-download"></i>
                                        </a>
                                        <a class="btn btn-outline-secondary btn-sm ms-1"
                                           href="@r.RutaRelativa"
                                           target="_blank">
                                            Ver <i class="fa-solid fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

<div class="mt-3">
    <button type="button" class="btn btn-outline-secondary" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Regresar</button>
</div>
</div>

