@{
    ViewBag.Title = "Manuales de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Manuales de Usuario</h2>
        <i class="fa-solid fa-book-open fa-2x text-secondary"></i>
    </div>

    @if (ViewBag.Reportes == null || ViewBag.Reportes.Count == 0)
    {
        <div class="alert alert-info">
            No se encontraron manuales PDF en la carpeta correspondiente.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>Nombre del Archivo</th>
                        <th class="text-center">Fecha de Creación</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in ViewBag.Reportes)
                    {
                        <tr>
                            <td>@m.NombreArchivo</td>

                            <td class="text-center">
                                @m.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                            </td>

                            <td class="text-center">
                                <a href="@m.RutaRelativa"
                                   class="btn btn-outline-danger btn-sm"
                                   target="_blank">
                                    <i class="fa-solid fa-file-pdf me-1"></i> Ver PDF
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
